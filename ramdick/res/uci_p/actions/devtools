BB=/res/busybox;
if [ "$($BB mount | grep rootfs | grep -c ro)" -eq "1" ]; then
	$BB mount -o remount,rw /;
fi;
case $1 in
	reboot)
		$BB sleep 1;
		reboot $2;
	;;
	cleardata)
		am force-stop com.af.synapse 2> /dev/null;
		$BB sleep 1;
		$BB rm -R /data/data/com.af.synapse/databases;
		$BB sleep 1;
		am start -a android.intent.action.MAIN -n com.af.synapse/.MainActivity 2> /dev/null;
  	;;
	restart)
    	am force-stop com.af.synapse 2> /dev/null;
    	reset_uci;
		$BB sync;
    	$BB sleep 1;
    	am start -a android.intent.action.MAIN -n com.af.synapse/.MainActivity 2> /dev/null;
  ;;
  cleardata2)
	am force-stop com.af.synapse 2> /dev/null;
	$BB rm -R /data/data/com.af.synapse/*;
	$BB rm -f /data/dalvik-cache/arm/system@app@synapse.apk@classes.dex;
	$BB rm -f /data/dalvik-cache/profiles/com.af.synapse;
	$BB sync;
	$BB sleep 1;
	/system/bin/reboot;
  ;;
esac;
$BB mount -t rootfs -o remount,ro rootfs
