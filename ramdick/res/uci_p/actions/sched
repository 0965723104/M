features=/sys/kernel/debug/sched_features;
BB=/res/busybox;
sched=$(echo $1 | $BB sed 's/^NO_//g');

if [[ `cat $features` == *$sched* ]]; then

  if [[ ! -z $2 ]]; then
    case $2 in
      0) $BB echo "NO_$sched" > $features;;
      1) $BB echo "$sched" > $features;;
    esac;
  fi;

  grep -oq NO_$sched $features;
  $BB echo $?;
fi;

